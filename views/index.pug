extends layout.pug

block content
    
    .container
     nav.navbar.navbar-expand-lg.navbar-light.bg-light
          a.navbar-brand(href='/') HOME
          button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
              li.nav-item.active
                a.nav-link(href='coming_soon')
                  | BOOKS 
                  span.sr-only (current)
              li.nav-item
                a.nav-link(href='coming_soon') BLOG
              li.nav-item
                a.nav-link.disabled(href='coming_soon') ABOUT
            form.form-inline.my-2.my-lg-0(action='search' method='GET')
              input.form-control.mr-sm-2(type='text' placeholder='eg., ISBN, title, author' aria-label='Search' name='input')
              button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search      
    
    .container   
        form.form-horizontal(action='confirmation' method='POST')
          fieldset
            #legend
              legend Register
            .control-group
              // Username
              label.control-label(for='username') Username
              .controls
                input#username.input-xlarge(type='text' name='username' placeholder=' e.g., spaceman' required)
                p.help-block Username can contain any letters or numbers, without spaces
            .control-group
              // E-mail
              label.control-label(for='email') E-mail
              .controls
                input#email.input-xlarge(type='text' name='email' placeholder='Enter your email' required)
                p.help-block Please provide your E-mail
            .control-group
              // Password
              label.control-label(for='password') Password
              .controls
                input#password.input-xlarge(type='password' name='password' placeholder=' At least 4 characters' required)
                p.help-block Password should be at least 4 characters
            .control-group
              // Password
              label.control-label(for='password_confirm' name='') Password (Confirm)
              .controls
                input#password_confirm.input-xlarge(type='password' name='repeated_password' placeholder=' At least 4 characters' required)
                p.help-block Please confirm password
            .control-group
              // Button
              .controls
                button.btn.btn-success Register
                if register_error
                  div(class="alert alert-danger" role="alert") #{register_error}
                node
                p.text-center
                        | Have an account? 
                        a.navbar-brand(href="login") Log In
                        
        footer(class="footer text-center" style="margin-top: 5%") &copy; All rights reserved                   
            

        
            
    

          
    
        

          
    
